---
import SwitchDarkMode from "./SwitchDarkMode.astro";
---

<nav
    class="w-full max-w-[90%] h-full mx-auto text-[#f8f7f3] dark:text-[#f8f7f3] flex justify-between items-center"
>
    <div>
        <span class="font-bold tracking-wider text-base md:text-xl lg:text-2xl">
            <a href="#" class="text-[#f8f7f3] hover:text-[#f4f4f4]"
                >Baterías<strong class="text-[#f6c543] uppercase">Express</strong></a
            >
        </span>
    </div>
    <div id="hamburger" class="md:hidden">
        <button
            id="btn-menu"
            class="text-white text-2xl"
            aria-label="Abrir menú"
            data-action-toggle-menu
        >
            <!--?xml version="1.0" encoding="utf-8"?--><!-- Uploaded to: SVG Repo, www.svgrepo.com, Generator: SVG Repo Mixer Tools -->
            <svg
                width="30px"
                height="30px"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    d="M4 6H20M4 12H20M4 18H20"
                    stroke="#f8f7f3"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
            </svg>
        </button>
    </div>
    <div class="menu-mobile hidden md:flex">
        <div class="flex md:hidden absolute top-6 right-8 z-10">
            <button
                id="btn-menu"
                class="text-white text-2xl"
                aria-label="Abrir menú"
                data-action-toggle-menu
            >
                <!--?xml version="1.0" encoding="utf-8"?--><!-- Uploaded to: SVG Repo, www.svgrepo.com, Generator: SVG Repo Mixer Tools -->
                <svg
                    width="30px"
                    height="30px"
                    viewBox="-0.5 0 25 25"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M3 21.32L21 3.32001"
                        stroke="#000000"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"></path>
                    <path
                        d="M3 3.32001L21 21.32"
                        stroke="#000000"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"></path>
                </svg>
            </button>
        </div>
        <ul
            class="text-white text-lg font-semibold flex items-center justify-center gap-x-4 [&>li>a]:p-2"
        >
            <li data-action-toggle-menu>
                <a href="#inicio">INICIO</a>
            </li>
            <li data-action-toggle-menu>
                <a href="#servicio">SERVICIO</a>
            </li>
            <li data-action-toggle-menu>
                <a href="#contacto">CONTACTO</a>
            </li>
            <li data-action-toggle-menu>
                <SwitchDarkMode />
            </li>
        </ul>
    </div>
</nav>

<style>
    a:hover {
        color: #f6c543;
        transition: color 0.3s;
    }

    @media screen and (width < 768px) {
        .menu-mobile {
            @apply bg-[#f8f7f3] dark:bg-[#071c3b];
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100dvh;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 100;
        }

        .menu-mobile ul {
            @apply text-[#071c3b] dark:text-[#f8f7f3];
            flex-direction: column;
            gap: 5rem;
            height: 100%;
            z-index: 200;
            backdrop-filter: blur(30px);
            font-size: 2rem;
        }
    }
</style>

<script>
    const btnMenu = document.querySelectorAll("[data-action-toggle-menu]");

    btnMenu.forEach((btn) => {
        btn.addEventListener("click", toggleMenu);
    });

    function toggleMenu() {
        const menuMobile = document.querySelector(".menu-mobile");
        menuMobile.classList.toggle("hidden");
    }
</script>
