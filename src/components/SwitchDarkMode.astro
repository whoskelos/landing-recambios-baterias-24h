<div class="container no-print">
  <label 
    for="interruptor"
    class="switch"
    title="Cambiar el esquema de color de la pÃ¡gina"

  >
    switch
    <input id="interruptor" name="interruptor" type="checkbox" checked/>
    <span class="slider"></span>
  </label>
</div>

<style>

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  padding: 0;
}
 .switch {
  font-size: 15px;
  color: transparent;
  position: relative;
  display: inline-block;
  width: 3.5em;
  height: 2em;
  transform: scale(.9);
}

/* Hide default HTML checkbox */
.switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

/* The slider */
.slider {
  --background: #002151;
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--background);
  transition: .5s;
  border-radius: 30px;
}

.slider:before {
  position: absolute;
  content: "";
  height: 1.4em;
  width: 1.4em;
  border-radius: 50%;
  left: 10%;
  bottom: 15%;
  box-shadow: inset 8px -4px 0px 0px #f6c543;
  background: var(--background);
  transition: .5s;
}

input:checked + .slider {
  background-color: #254c85;
}

input:checked + .slider:before {
  transform: translateX(100%);
  box-shadow: inset 15px -4px 0px 15px #f6c543;
}

  @media print {
    .no-print {
      display: none;
    }
  }
</style>

<script>
  const switchButton = document.querySelector(
    ".switch input"
  ) as HTMLInputElement;
  const html = document.querySelector("html") as HTMLElement;

  // light / dark mode con localStorage
  if (html && switchButton) {
    if (localStorage.getItem("theme") === "dark") {
      html.classList.add("dark");
      switchButton.checked = true;
    } else {
      html.classList.remove("dark");
      switchButton.checked = false;
    }

    switchButton.addEventListener("change", () => {
      if (switchButton.checked) {
        html.classList.add("dark");
        localStorage.setItem("theme", "dark");
      } else {
        html.classList.remove("dark");
        localStorage.setItem("theme", "light");
      }
    });
  }
</script>
