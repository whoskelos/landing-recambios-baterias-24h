---
import CronometroIcon from "@icons/cronometro.astro";
import LocationIcon from "@icons/location.astro";
import MenuMobileClose from "@icons/menu-mobile-close.astro";
import MenuMobileOpen from "@icons/menu-mobile-open.astro";
import PhoneIcon from "@icons/phone.astro";
import WhatsappIcon from "@icons/whatsapp.astro";
import RayIcon from "@icons/ray.astro";
import ThemeDarkIcon from "@icons/theme-icon-dark.astro";
import ThemeLightIcon from "@icons/theme-icon-light.astro";
import WalletIcon from "@icons/wallet.astro";
import EmailIcon from "@icons/email.astro";

interface Props {
  icon: string;
  size?: number;
  classSvg?: string;
}

const { icon, size, classSvg } = Astro.props;
---

<Fragment>
    {icon === "cronometro" && <CronometroIcon size={size} classSvg={classSvg} />}
    {icon === "location" && <LocationIcon size={size} classSvg={classSvg} />}
    {icon === "menu-mobile-close" && <MenuMobileClose size={size} classSvg={classSvg} />}
    {icon === "menu-mobile-open" && <MenuMobileOpen size={size} classSvg={classSvg} />}
    {icon === "phone" && <PhoneIcon size={size} classSvg={classSvg} />}
    {icon === "whatsapp" && <WhatsappIcon size={size} classSvg={classSvg} />}
    {icon === "ray" && <RayIcon size={size} classSvg={classSvg} />}
    {icon === "theme-icon-dark" && <ThemeDarkIcon size={size} classSvg={classSvg} />}
    {icon === "theme-icon-light" && <ThemeLightIcon size={size} classSvg={classSvg} />}
    {icon === "wallet" && <WalletIcon size={size} classSvg={classSvg} />}
    {icon === "email" && <EmailIcon size={size} classSvg={classSvg} />}
</Fragment>
